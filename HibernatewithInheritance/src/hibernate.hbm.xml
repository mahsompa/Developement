<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="Employee" table="emptable1" discriminator-value="emp">
		<id name="empId">
			<generator class="increment"></generator>
		</id>

		<discriminator column="type" type="string"></discriminator>
		<property name="empName"></property>

		<subclass name="RegularEmployee" discriminator-value="reg_emp">
			<property name="empsal"></property>
			<property name="empbonus"></property>
		</subclass>

		<subclass name="ContractEmployee" discriminator-value="con_emp">
			<property name="salary_per_hour"></property>
			<property name="contract_duration"></property>
		</subclass>

	</class>

</hibernate-mapping>  